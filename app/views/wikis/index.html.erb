<div class="col-lg-10 col-lg-offset-1">
  <div class="page-header">
    <h1>
      Listing Wikis <span class="badge"><%= @wikis.count %></span>
      <%= link_to 'Add a New Wiki', new_wiki_path, class: "btn btn-info pull-right " %>
    </h1>
  </div>

  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Title <small class="muted">(** = private wiki)</small></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @wikis.each do |wiki| %>
        <tr>
          <td>
            <%= link_to "#{"** " if wiki.private == true}#{wiki.title}", wiki, class: "btn btn-link" %>
          </td>
          <td>
            <div class="btn-group pull-right">
              <%= link_to 'Edit', edit_wiki_path(wiki), class: "btn btn-default" %>
              <%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
